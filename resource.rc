#include "resource.h"
#include <windows.h>


LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US
#pragma code_page(1252)

ID_ICON_MAIN ICON icon.ico

ID_MENU_TRAY MENU 
BEGIN
  POPUP "menu"
  BEGIN
    MENUITEM "&Reload", ID_MENU_RELOAD
    MENUITEM "&Pause", ID_MENU_PAUSE
    MENUITEM SEPARATOR
    MENUITEM "&Log...", ID_MENU_LOG
    MENUITEM SEPARATOR
    MENUITEM "E&xit", ID_MENU_EXIT
  END
END

ID_DLG_LOG DIALOG 0, 0, 300, 400
 STYLE WS_POPUP | WS_OVERLAPPEDWINDOW | DS_SHELLFONT
 CAPTION "mouse-processor - Log"
 FONT 8, "MS Shell Dlg"
BEGIN
  DEFPUSHBUTTON "&Close", IDOK, 247, 381, 50, 15
  EDITTEXT ID_EDIT_LOG, 0, 0, 300, 378,
           WS_HSCROLL | WS_VSCROLL | WS_TABSTOP |
           ES_MULTILINE | ES_AUTOVSCROLL | ES_AUTOHSCROLL |
           ES_NOHIDESEL | ES_READONLY
  PUSHBUTTON "C&lear", ID_BTN_LOG_CLEAR, 3, 381, 50, 15
  AUTOCHECKBOX "Show &Detail", ID_CHK_LOG_DETAIL, 167, 381, 80, 15
END

STRINGTABLE
BEGIN
  ID_STR_LOG_EDIT_FONT "Terminal"
  ID_STR_LOG_EDIT_FONT_SIZE "-13"
  ID_STR_LOG_EDIT_FONT_CS "1"
END


LANGUAGE LANG_JAPANESE, SUBLANG_DEFAULT
#pragma code_page(932)

ID_MENU_TRAY MENU 
BEGIN
  POPUP "menu"
  BEGIN
    MENUITEM "再読み込み(&R)", ID_MENU_RELOAD
    MENUITEM "一時停止(&P)", ID_MENU_PAUSE
    MENUITEM SEPARATOR
    MENUITEM "ログ(&L)...", ID_MENU_LOG
    MENUITEM SEPARATOR
    MENUITEM "終了(&X)", ID_MENU_EXIT
  END
END

ID_DLG_LOG DIALOG 0, 0, 300, 400
 STYLE WS_POPUP | WS_OVERLAPPEDWINDOW | DS_SHELLFONT
 CAPTION "mouse-processor - Log"
 FONT 9, "MS Shell Dlg"
BEGIN

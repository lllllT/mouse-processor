  EDITTEXT ID_EDIT_LOG, 0, 0, 300, 378,
           WS_HSCROLL | WS_VSCROLL | WS_TABSTOP |
           ES_MULTILINE | ES_AUTOVSCROLL | ES_AUTOHSCROLL |
           ES_NOHIDESEL | ES_READONLY
  PUSHBUTTON "クリア(&L)", ID_BTN_LOG_CLEAR, 3, 381, 50, 15
  AUTOCHECKBOX "詳細を表示(&D)", ID_CHK_LOG_DETAIL, 167, 381, 80, 15
END

STRINGTABLE
BEGIN
  ID_STR_LOG_EDIT_FONT "Terminal"
  ID_STR_LOG_EDIT_FONT_SIZE "-13"
  ID_STR_LOG_EDIT_FONT_CS "128"
END
